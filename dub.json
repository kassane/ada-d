{
	"name": "ada-d",
	"version": "1.0.1",
	"authors": [
		"Matheus Catarino Fran√ßa"
	],
	"description": "D bindings for Ada URL parser",
	"license": "Apache-2.0",
	"targetPath": "build",
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo"
			]
		},
		"release": {
			"buildOptions": [
				"releaseMode",
				"optimize",
				"inline"
			]
		}
	},
	"lflags-posix": [
		"-L$PACKAGE_DIR/build"
	],
	"lflags-windows": [
		"/LIBPATH:$PACKAGE_DIR\\build"
	],
	"dflags": [
		"-preview=dip1000",
		"-preview=in",
		"-preview=rvaluerefparam"
	],
	"dflags-ldc": [
		"--verrors-context"
	],
	"dflags-dmd": [
		"-verrors=context"
	],
	"postBuildCommands-linux": [
		"export PATH=$PATH:$PACKAGE_DIR/build"
	],
	"preBuildCommands-posix": [
		"mkdir -p build",
		"curl -sLO https://github.com/ada-url/ada/releases/download/v2.9.2/ada.cpp",
		"curl -sLO https://github.com/ada-url/ada/releases/download/v2.9.2/ada.h",
		"g++ -O3 -fPIC -std=c++17 -c -o build/ada.o ada.cpp",
		"g++ -shared -o build/libada.so build/ada.o",
		"rm build/ada.o ada.cpp ada.h"
	],
	"preBuildCommands-windows": [
		"powershell -Command \"mkdir -Force build\"",
		"powershell -Command \"(New-Object Net.WebClient).DownloadFile('https://github.com/ada-url/ada/releases/download/v2.9.2/ada.cpp', 'ada.cpp')\"",
		"powershell -Command \"(New-Object Net.WebClient).DownloadFile('https://github.com/ada-url/ada/releases/download/v2.9.2/ada.h', 'ada.h')\"",
		"cl.exe /c /O2 /std:c++latest /Fo:build\\ada.obj ada.cpp",
		"link.exe /DLL /OUT:build\\ada.dll build\\ada.obj",
		"powershell -Command \"Remove-Item build\\ada.obj, ada.cpp, ada.h\""
	],
	"configurations": [
		{
			"name": "default",
			"sourceFiles": [
				"source/package.d"
			],
			"targetType": "library"
		},
		{
			"name": "unittest",
			"sourceFiles": [
				"source/package.d"
			],
			"libs": [
				"ada"
			]
		},
		{
			"name": "benchmark",
			"importPaths": [
				"source"
			],
			"sourceFiles": [
				"bench/bench.d"
			],
			"libs": [
				"ada"
			],
			"targetType": "executable"
		}
	]
}